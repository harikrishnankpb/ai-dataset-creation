{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "QA Generator - Default",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "args": [
                "--input_file", "company.pdf",
                "--output_file", "qa_pairs.jsonl",
                "--num_workers", "4"
            ],
            "justMyCode": false
        },
        {
            "name": "QA Generator - Small Chunks",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "args": [
                "--input_file", "company.pdf",
                "--output_file", "qa_pairs_small_chunks.jsonl",
                "--chunk_size", "500",
                "--chunk_overlap", "100",
                "--num_workers", "1"
            ],
            "justMyCode": false
        },
        {
            "name": "QA Generator - With GPU",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "args": [
                "--input_file", "company.pdf",
                "--output_file", "qa_pairs.jsonl",
                "--num_workers", "1",
                "--use_gpu"
            ],
            "justMyCode": false
        },
        {
            "name": "QA Generator - Custom Args",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "justMyCode": false
        }
    ]
}